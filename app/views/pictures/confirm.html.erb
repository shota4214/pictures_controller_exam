<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @picture, local: true, url: confirm_pictures_path) do |form| %>
  <%= form.hidden_field :picture %>
  <%= form.hidden_field :content %>

  <p>Picture:<%= image_tag @picture.image.url %></p>
  <p>本文:<%= @picture.content %></p>
  <%= form.submit "登録する" %>
  <%= form.submit "戻る" , name: 'back' %>
<% end %>